{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "esnext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES5",
      "ES6",
      "ES2015.Promise",
      "ES2015.Iterable"
    ],
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "target": "ES2015",
    "baseUrl": "./packages",
    "useDefineForClassFields": true
  },
  "exclude": ["node_modules"]
}
